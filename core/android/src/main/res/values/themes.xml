<resources>

    <style name="Base.Theme.Chaser" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Text appearances -->
        <item name="textAppearanceHeadline4">@style/TextAppearance.Chaser.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Chaser.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Chaser.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Chaser.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Chaser.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Chaser.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Chaser.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Chaser.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.Chaser.Button</item>

        <!-- Shape appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Chaser.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Chaser.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Chaser.LargeComponent</item>

        <!-- Material Dialogs -->
        <item name="md_corner_radius">4dp</item>
    </style>

    <style name="Theme.Chaser" parent="Base.Theme.Chaser">
        <!-- color -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Material Dialogs -->
        <item name="md_color_title">?attr/colorOnBackground</item>
        <item name="md_color_content">?attr/colorOnBackground</item>
        <item name="md_color_button_text">?attr/colorPrimary</item>
        <item name="md_ripple_color">?attr/colorPrimary</item>
        <item name="md_color_widget">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Chaser.DayNight" parent="Theme.Chaser" />

    <style name="Theme.Chaser.Preference" pareng="Theme.Chaser">
        <item name="colorSecondary">?attr/colorPrimary</item>
    </style>
</resources>
